#!/usr/bin/env bash
# Comment
hosts_file="/etc/hosts"
new_hosts_file="~/hosts.new"
localhost_ip="127.0.0.2"
facebook_ip="8.8.8.8"

cp "$hosts_file" "$new_hosts_file"
sed -i "s/127.0.0.1/$localhost_ip/" "$new_hosts_file"
echo "$facebook_ip facebook.com" >> "$new_hosts_file"
sudo cp -f "$new_hosts_file" "$hosts_file"
